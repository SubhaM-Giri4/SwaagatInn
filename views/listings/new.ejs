<% layout('/layouts/boilerplate') -%>

<h2 class="form-heading">Add a Cool Spot</h2>

<form method="POST" action="/listings" class="listing-form offset-2" >
    <label for="title">Spot name?</label>
    <input id="title" name="listing[title]" placeholder="Chill Cabin" type="text" /><br />

    <label for="description">What's it like?</label>
    <textarea id="description" name="listing[description]" placeholder="Peaceful, wild, haunted?"></textarea><br />

    <label for="image">Got a pic?</label>
    <input id="image" name="listing[image]" placeholder="Paste image link" type="text" /><br />


    <div class="row ">
        <div class="col-md-6">
            <label for="price">Price (â‚¹)?</label>
            <input id="price" name="listing[price]" placeholder="999" type="number" /><br />
        </div>
        <div class="col-md-6">
            <label for="country" >Which country?</label>
            <input id="country" name="listing[country]" placeholder="India" type="text" /><br />
        </div>

    </div>


    <label for="location">Pin the place!</label>
    <input id="location" name="listing[location]" placeholder="Rishikesh" type="text" /><br />

    <button type="submit">Add it </button>
</form>
