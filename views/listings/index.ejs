<% layout('/layouts/boilerplate') -%>
<div class="container my-5">
    <div class="text-center p-4 rounded shadow" style="background: linear-gradient(90deg, #6f42c1, #dcb6ff); color:white;">
        <i class="fa-solid fa-robot fa-2x mb-2"></i>
        <h3>AI Trip Planner</h3>
        <p>Create a personalized itinerary based on your preferences.</p>
        <a href="/trip-planner" class="btn btn-light mt-2">Plan Your Trip</a>
    </div>
</div>

<body>
<h2 class="page-title">Discover Hidden Gems of India</h2>

<div class="card-grid">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="card-link">
        <div class="card">
            <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="card-img">
            <div class="card-body">
                <h3 class="card-title"><%= listing.title %></h3>
                <p class="card-desc"><%= listing.description %></p>
                <p class="card-location"><%= listing.location %>, <%= listing.country %></p>
                <p class="card-price">Approx   â‚¹ <%= listing.price %> / day</p>
            </div>
        </div>
    </a>
    <% } %>
</div>
</body>
